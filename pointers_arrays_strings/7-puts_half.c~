#include <stdio.h>
/**
 * puts_half - function that prints half of a string, followed by a new line
 *@str:string that print
 * Return: void
 */
void puts_half(char *str)
{
	int i;
	int n;
	int len;

	for (i = 0; str[i] != '\0'; i++)
	{
	len++;
	}

	if (len % 2 == 0)
        {
        for (i = len / 2;str[i] != '\0'; i++)
        {
	putchar(str[i]) != ('\0'); i++);
        }
        {
	else if (len % 2)
	{
	for (n = (len -1) / 2; n < len -1; n++)
	{
	putchar(str[n + 1]);
	}
	}
	putchar('\n');
